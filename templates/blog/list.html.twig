{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<h1 class="text-center fw-bolder">Liste des articles</h1>

	<div class="row mt-5 d-flex align-items-center justify-content-center">
		{% for article in articles %}
			<div class="card border-secondary col-3 me-2 mb-3 p-0" style="max-width: 20rem;">
				<div class="card-header">{{ article.title }}</div>
				<div class="card-body">
					<p class="card-text">{{ article.content }}</p>
					<p class="card-text">Crée le :
						{{ article.createdAt|date('d/m/Y') }}</p>
					<p class="card-text">Mis à jour à :
						{{ article.updatedAt|date('H:i') }}</p>
					<p class="card-text">{{ article.slug}}</p>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
